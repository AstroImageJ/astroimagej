        header h1 { margin: 0; font-size: 2.5rem; }
        header p { margin: 0.5rem 0 1.5rem; font-size: 1.2rem; }
        .btn { display: inline-block; margin: 0.5rem; padding: 0.75rem 1.5rem; background: #f9a825; color: #012345; text-decoration: none; font-weight: bold; border-radius: 4px; }
        nav { display: flex; justify-content: center; gap: 1rem; margin-bottom: 1rem; }
        nav a { color: #fff; text-decoration: none; font-weight: 500; }
        section { padding: 1rem 1rem; max-width: 1000px; margin: 0 auto; }
        .features { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; }
        .feature { background: #f5f5f5; padding: 1.5rem; border-radius: 8px; }
        .feature h3 { margin-top: 0; }
        footer { background: #333; color: #fff; text-align: center; padding: 1rem; font-size: 0.9rem; }
        footer a { color: #f9a825; text-decoration: none; }
        /* container: size to the images and act as positioning context */
        .presentation-swiper {
          position: relative;
          max-width: 1000px;
          width: 100%;
          margin: 1rem auto;
          overflow: hidden;
        }

        /* make slides/images fit the container cleanly */
        .presentation-swiper .swiper-slide {
          display: flex;
          align-items: center;
          justify-content: center;
        }

        .presentation-swiper .swiper-slide img {
          width: 100%;
          height: auto;
          display: block;
          object-fit: contain;
        }
        .presentation-swiper .swiper-button-prev { left: 12px; }
        .presentation-swiper .swiper-button-next { right: 12px; }
    </style>
</head>
