---
import "../styles/global.scss";
import "../styles/downloads.scss";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
    <BaseHead title="Download Statistics" />
    <body>
        <div class="glow"></div>
        <Header title="Statistics" link="/statistics" />

        <div class="stats-layout wrap">
            <main class="stats-main">
                <h1 id="top">Download Statistics</h1>

                <div id="stats" class="info release"></div>

                <h2 id="stacked-bar-h">Platform Ã— Version Distribution</h2>
                <div id="stacked-bar" class="chart-wrapper"></div>

                <h2 id="global-version-chart-h">Total Downloads per Version</h2>
                <div id="global-version-chart" class="chart-wrapper"></div>

                <h2 id="os-arch-container-h">
                    Version Distribution per Platform
                </h2>
                <div id="os-arch-container" class="charts-grid"></div>

                <h2 id="charts-container-h">
                    Platform Distribution per Version
                </h2>
                <div id="charts-container" class="charts-grid"></div>
            </main>

            <aside class="stats-sidebar" aria-label="On this page">
                <div class="sidebar-sticky">
                    <h3>On this page</h3>
                    <nav class="sidebar-nav">
                        <a href="#top">Overview</a>
                        <a href="#stacked-bar-h">Combined Distribution</a>
                        <a href="#global-version-chart-h">Total per Version</a>
                        <a href="#os-arch-container-h">By Platform</a>
                        <div
                            id="sidebar-os-arch-links"
                            class="sidebar-sub-links"
                        >
                        </div>
                        <a href="#charts-container-h">By Version</a>
                        <div
                            id="sidebar-version-links"
                            class="sidebar-sub-links"
                        >
                        </div>
                    </nav>
                </div>
            </aside>
        </div>

        <style is:global>
            .wrap {
                max-width: 100%;
            }
            .stats-layout {
                display: flex;
            }
            .stats-main {
                flex: 1;
                min-width: 0;
            }

            .stats-sidebar {
                width: 260px;
                flex-shrink: 0;
                display: none;
                justify-items: flex-end;
            }
            @media (min-width: 1024px) {
                .stats-sidebar {
                    display: block;
                    justify-content: flex-end;
                }
            }
            .sidebar-sticky {
                position: sticky;
                top: 2rem;
                max-height: calc(100vh - 4rem);
                overflow-y: auto;
                padding-right: 0.25rem;
            }
            .sidebar-sticky h3 {
                font-size: 0.82rem;
                text-transform: uppercase;
                letter-spacing: 0.05rem;
                margin-bottom: 0.75rem;
                color: var(--muted);
            }
            .sidebar-nav {
                display: flex;
                flex-direction: column;
                gap: 0.5rem;
                align-items: flex-start;
            }
            .sidebar-nav a {
                font-size: 0.9rem;
                text-decoration: none;
                color: var(--muted);
                transition:
                    color 0.18s,
                    transform 0.12s;
            }
            .sidebar-nav a:hover {
                color: var(--accent);
                transform: translateX(4px);
            }

            .sidebar-sub-links {
                display: flex;
                flex-direction: column;
                gap: 0.25rem;
                padding-left: 0.9rem;
                margin-bottom: 0.5rem;
                border-left: 1px solid rgba(255, 255, 255, 0.08);
            }
            .sidebar-sub-links a {
                font-size: 0.82rem;
                text-decoration: none;
                color: var(--muted);
            }
            .sidebar-sub-links a:hover {
                color: var(--accent);
            }

            .chart-wrapper {
                width: 100%;
                min-height: 500px;
                background: rgba(255, 255, 255, 0.05);
                border-radius: 12px;
                margin-bottom: 2rem;
                padding: 1rem;
                border: 1px solid rgba(255, 255, 255, 0.1);
            }
            .charts-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
                gap: 2rem;
                margin-bottom: 3rem;
            }
            .chart-item {
                background: rgba(255, 255, 255, 0.05);
                border-radius: 12px;
                padding: 1.5rem;
                border: 1px solid rgba(255, 255, 255, 0.1);
            }
            .chart-item h3 {
                margin-top: 0;
                font-size: 1.2rem;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
                padding-bottom: 0.5rem;
                margin-bottom: 1rem;
            }
            .chart-div {
                width: 100%;
                height: 400px;
            }
            #stats h3 {
                margin: 0.5rem 0;
                font-weight: normal;
                font-size: 1.1rem;
            }

            @media (max-width: 1023px) {
                .stats-layout {
                    flex-direction: column;
                }
                .stats-sidebar {
                    display: none;
                }
            }
        </style>

        <script
            type="text/javascript"
            src="https://www.gstatic.com/charts/loader.js"></script>

        <script>
            import { getReleaseStatistics } from "../scripts/downloadStatistics";

            function isDarkMode() {
                const htmlTheme =
                    document.documentElement.getAttribute("data-theme");
                if (htmlTheme) return htmlTheme === "dark";
                if (document.body.classList.contains("dark")) return true;
                return (
                    window.matchMedia &&
                    window.matchMedia("(prefers-color-scheme: dark)").matches
                );
            }

            const CHART_OPTIONS = {
                backgroundColor: "transparent",
                legend: {
                    textStyle: { color: isDarkMode() ? "#e5e7eb" : "#000000" },
                },
                titleTextStyle: {
                    color: isDarkMode() ? "#e5e7eb" : "#000000",
                    fontSize: 16,
                },
                hAxis: {
                    textStyle: { color: isDarkMode() ? "#9ca3af" : "#000000" },
                    titleTextStyle: {
                        color: isDarkMode() ? "#e5e7eb" : "#000000",
                    },
                    gridlines: {
                        color: isDarkMode()
                            ? "rgba(255,255,255,0.1)"
                            : "rgba(0,0,0,0.1)",
                    },
                },
                vAxis: {
                    textStyle: { color: isDarkMode() ? "#9ca3af" : "#000000" },
                    titleTextStyle: {
                        color: isDarkMode() ? "#e5e7eb" : "#000000",
                    },
                    gridlines: {
                        color: isDarkMode()
                            ? "rgba(255,255,255,0.1)"
                            : "rgba(0,0,0,0.1)",
                    },
                },
            };

            google.charts.load("current", { packages: ["corechart"] });
            google.charts.setOnLoadCallback(drawCharts);

            // re-draw charts when system theme changes so graphs' text colors stay in sync
            if (window.matchMedia) {
                try {
                    window
                        .matchMedia("(prefers-color-scheme: dark)")
                        .addEventListener("change", () => {
                            // redraw when theme flips
                            drawCharts();
                        });
                } catch (e) {
                    console.log(e);
                }
            }

            async function drawCharts() {
                try {
                    const releases = await getReleaseStatistics();

                    // clear TOC link containers first
                    const nos = document.getElementById(
                        "sidebar-os-arch-links",
                    );
                    const nvers = document.getElementById(
                        "sidebar-version-links",
                    );
                    if (nos) nos.innerHTML = "";
                    if (nvers) nvers.innerHTML = "";

                    drawStats(releases);

                    // Global Version Distribution
                    drawGlobalVersionChart(releases);

                    // OS-Arch Version Distribution
                    drawOsArchVersionCharts(releases);

                    // Platform Distribution per Version
                    drawPerVersionCharts(releases);

                    drawStackedBar(releases);
                } catch (error) {
                    console.error("Error loading statistics:", error);
                    const container =
                        document.getElementById("charts-container");
                    if (container) container.innerText = "Error loading data.";
                }
            }

            function drawStats(releases: any[]) {
                const container = document.getElementById("stats");
                if (!container) return;

                const totalDownloads = releases.reduce(
                    (s, a) => s + (a.total_downloads || 0),
                    0,
                );
                const maxDownloads = releases.reduce(
                    (s, a) => Math.max(a.total_downloads || 0, s),
                    0,
                );

                container.innerHTML = `
          <h3><strong>Total Downloads:</strong> ${totalDownloads.toLocaleString()}</h3>
          <h3><strong>Max Downloads (single version):</strong> ${maxDownloads.toLocaleString()}</h3>
        `;
            }

            function drawGlobalVersionChart(releases: any[]) {
                const dataArray = [["Version", "Downloads"]];
                releases.forEach((r) =>
                    dataArray.push([r.name, r.total_downloads || 0]),
                );

                const container = document.getElementById(
                    "global-version-chart",
                );

                if (container) {
                    const data =
                        google.visualization.arrayToDataTable(dataArray);
                    const chart = new google.visualization.PieChart(container);
                    chart.draw(data, {
                        ...CHART_OPTIONS,
                        title: "Total Downloads per Version",
                        chartArea: { width: "80%", height: "70%" },
                    });
                }
            }

            function drawOsArchVersionCharts(releases: any[]) {
                const osArchMap: Record<string, Record<string, number>> = {};
                releases.forEach((r) => {
                    (r.assets || []).forEach(
                        (a: { target: any; download_count: any }) => {
                            const target = a.target;
                            if (
                                target &&
                                !String(target).includes("undefined")
                            ) {
                                if (!osArchMap[target]) osArchMap[target] = {};
                                osArchMap[target][r.name] =
                                    (osArchMap[target][r.name] || 0) +
                                    (a.download_count || 0);
                            }
                        },
                    );
                });

                const container = document.getElementById("os-arch-container");
                const sidebar = document.getElementById(
                    "sidebar-os-arch-links",
                );
                if (!container) return;

                // clear container first
                container.innerHTML = "";
                if (sidebar) sidebar.innerHTML = "";

                Object.entries(osArchMap).forEach(([target, versions]) => {
                    const id = `platform-${String(target).replace(/\s+/g, "-").toLowerCase()}`;

                    // chart item
                    const item = document.createElement("div");
                    item.className = "chart-item";
                    item.id = id;
                    item.innerHTML = `<h3>Platform: ${target}</h3><div class="chart-div"></div>`;
                    container.appendChild(item);

                    // sidebar link
                    if (sidebar) {
                        const link = document.createElement("a");
                        link.href = `#${id}`;
                        link.innerText = target;
                        sidebar.appendChild(link);
                    }

                    // draw pie chart for this platform
                    const dataArray = [
                        ["Version", "Downloads"],
                        ...Object.entries(versions),
                    ];
                    const data =
                        google.visualization.arrayToDataTable(dataArray);
                    const chart = new google.visualization.PieChart(
                        item.querySelector(".chart-div"),
                    );
                    chart.draw(data, {
                        ...CHART_OPTIONS,
                        title: `Version Usage on ${target}`,
                        chartArea: { width: "80%", height: "70%" },
                    });
                });
            }

            function drawPerVersionCharts(releases: any[]) {
                const container = document.getElementById("charts-container");
                const sidebar = document.getElementById(
                    "sidebar-version-links",
                );
                if (!container) return;

                // clear container and sidebar
                container.innerHTML = "";
                if (sidebar) sidebar.innerHTML = "";

                releases.forEach(
                    (release: {
                        assets: any;
                        name: string;
                        total_downloads: any;
                    }) => {
                        const distribution: Record<string, number> = {};
                        let hasData = false;

                        (release.assets || []).forEach(
                            (asset: { target: any; download_count: any }) => {
                                const target = asset.target;
                                if (
                                    target &&
                                    !String(target).includes("undefined")
                                ) {
                                    distribution[target] =
                                        (distribution[target] || 0) +
                                        (asset.download_count || 0);
                                    hasData = true;
                                }
                            },
                        );

                        if (hasData) {
                            const id = `version-${String(release.name).replace(/\./g, "-")}`;

                            // chart item
                            const item = document.createElement("div");
                            item.className = "chart-item";
                            item.id = id;
                            item.innerHTML = `<h3>${release.name} (Total: ${(
                                release.total_downloads || 0
                            ).toLocaleString()})</h3><div class="chart-div"></div>`;
                            container.appendChild(item);

                            // sidebar link
                            if (sidebar) {
                                const link = document.createElement("a");
                                link.href = `#${id}`;
                                link.innerText = release.name;
                                sidebar.appendChild(link);
                            }

                            const dataArray = [
                                ["OS-Arch", "Downloads"],
                                ...Object.entries(distribution),
                            ];
                            const data =
                                google.visualization.arrayToDataTable(
                                    dataArray,
                                );
                            const chart = new google.visualization.PieChart(
                                item.querySelector(".chart-div"),
                            );
                            chart.draw(data, {
                                ...CHART_OPTIONS,
                                title: `Platform Distribution for ${release.name}`,
                                chartArea: { width: "80%", height: "70%" },
                            });
                        }
                    },
                );
            }

            function drawStackedBar(releases: any[]) {
                const container = document.getElementById("stacked-bar");
                if (!container) return;

                const targetsSet = new Set();
                releases.forEach((r: { assets: any }) => {
                    (r.assets || []).forEach((a: { target: unknown }) => {
                        if (a.target && !String(a.target).includes("undefined"))
                            targetsSet.add(a.target);
                    });
                });
                const targets = Array.from(targetsSet).sort().reverse();

                if (targets.length === 0 || releases.length === 0) return;

                const dataArray = [
                    ["Version", ...targets, { role: "annotation" }],
                ];
                [...releases].reverse().forEach((r) => {
                    const row = [r.name];
                    const countsByTarget: Record<string, number> = {};
                    (r.assets || []).forEach(
                        (a: {
                            target: string | number;
                            download_count: any;
                        }) => {
                            if (
                                a.target &&
                                !String(a.target).includes("undefined")
                            ) {
                                countsByTarget[a.target] =
                                    (countsByTarget[a.target] || 0) +
                                    (a.download_count || 0);
                            }
                        },
                    );
                    targets.forEach((t) => row.push(countsByTarget[t] || 0));
                    row.push(r.total_downloads || 0);
                    dataArray.push(row);
                });

                const data = google.visualization.arrayToDataTable(dataArray);
                const chart = new google.visualization.ColumnChart(container);
                chart.draw(data, {
                    ...CHART_OPTIONS,
                    isStacked: true,
                    title: "OS-Arch distribution per version",
                    legend: {
                        position: "right",
                        textStyle: {
                            color: isDarkMode() ? "#e5e7eb" : "#000000",
                        },
                    },
                    hAxis: {
                        minValue: 0,
                        title: "Version",
                        textStyle: {
                            color: isDarkMode() ? "#9ca3af" : "#000000",
                        },
                        titleTextStyle: {
                            color: isDarkMode() ? "#e5e7eb" : "#000000",
                        },
                        gridlines: {
                            color: isDarkMode()
                                ? "rgba(255,255,255,0.1)"
                                : "rgba(0,0,0,0.1)",
                        },
                    },
                    vAxis: {
                        title: "Downloads",
                        textStyle: {
                            color: isDarkMode() ? "#9ca3af" : "#000000",
                        },
                        titleTextStyle: {
                            color: isDarkMode() ? "#e5e7eb" : "#000000",
                        },
                        gridlines: {
                            color: isDarkMode()
                                ? "rgba(255,255,255,0.1)"
                                : "rgba(0,0,0,0.1)",
                        },
                    },
                });
            }
        </script>
    </body>
</html>
